<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#ccc" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="1dp" />

            <solid android:color="@android:color/white" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>